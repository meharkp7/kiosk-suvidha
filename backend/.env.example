# Production Environment Variables
# Copy this file to .env and fill in your actual values

# Database (Supabase PostgreSQL)
# Transaction pooler (for most queries)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-ap-south-1.pooler.supabase.com:6543/postgres"
# Direct connection (for migrations)
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# JWT Secret (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-min-32-characters"

# Razorpay Configuration (Test Mode for Development)
RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxxx"
RAZORPAY_KEY_SECRET="your_razorpay_secret_key"

# For Production Razorpay:
# RAZORPAY_KEY_ID="rzp_live_xxxxxxxxxxxxx"
# RAZORPAY_KEY_SECRET="your_live_razorpay_secret_key"

# CORS Configuration
CORS_ORIGIN="https://kiosk-suvidha.vercel.app"

# Node Environment
NODE_ENV="production"
